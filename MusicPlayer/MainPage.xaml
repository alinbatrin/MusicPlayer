<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicPlayer"
             x:Class="MusicPlayer.MainPage">

    <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
        <Button x:Name="Play_Button" Text="Play Song" Clicked="Play_Button_Clicked"   />
        <Button x:Name="Pause_Button" Text="Pause Song" Clicked="Pause_Button_Clicked"   />
        <Button x:Name="Stop_Button" Text="Stop Song" Clicked="Stop_Button_Clicked"   />
        <Slider x:Name="Slider" Maximum="100" Scale="1" ValueChanged="Slider_Changed" />
        <Label x:Name="CronoTime" Text="CronoTime" />
        <Label x:Name="SongTime" Text="SongTime" />
    </StackLayout>
        
</ContentPage>
