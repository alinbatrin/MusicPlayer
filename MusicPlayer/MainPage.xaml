<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MusicPlayer"
             x:Class="MusicPlayer.MainPage">

    <StackLayout Orientation="Vertical"  HorizontalOptions="FillAndExpand">
        <Button x:Name="Play_Button" Text="PlaySong" Clicked="Play_Button_Clicked"   />
        <Button x:Name="Pause_Button" Text="PauseSong" Clicked="Pause_Button_Clicked"   />
        <Button x:Name="Stop_Button" Text="PauseSong" Clicked="Stop_Button_Clicked"   />

    </StackLayout>
        
</ContentPage>
